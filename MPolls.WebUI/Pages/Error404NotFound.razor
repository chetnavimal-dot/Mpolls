@page "/error/404NotFound"
@layout AuthLayout

@* Router and manual navigation reuse this 404 surface so visitors get clear sign-in guidance. *@
<MudPaper Class="mx-auto my-8 pa-8 text-center" Style="max-width:420px;">
    <MudIcon Icon="@Icons.Material.Filled.HelpOutline" Size="Size.Large" Color="Color.Info" Class="mb-4" />
    <MudText Typo="Typo.h3" Class="mb-2">404 Â· Oops!</MudText>
    <MudText Typo="Typo.subtitle1" Class="mb-6 text-secondary">
        Oops. Looks like you are lost. Click below to login or register if you're new.
    </MudText>

    <MudStack Row="true" Spacing="2" Justify="Justify.Center">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/login" StartIcon="@Icons.Material.Filled.Login">
            Login
        </MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="/register" StartIcon="@Icons.Material.Filled.AppRegistration">
            Register
        </MudButton>
    </MudStack>

    <MudDivider Class="my-6" />

    <MudStack AlignItems="AlignItems.Center" Spacing="1">
        <MudIcon Icon="@Icons.Material.Filled.Explore" Color="Color.Info" />
        <MudText Typo="Typo.body2" Class="text-secondary">
            Need help finding something? Email <MudLink Href="mailto:support@mpolls.com">support@mpolls.com</MudLink> and we'll point you in the right direction.
        </MudText>
    </MudStack>
</MudPaper>
